<p id="notice"><%= notice %></p>

<h1>Preferences</h1>

<table>
  <thead>
    <tr>
      <th>Course taken</th>
      <th>Description</th>
      <th>Grade</th>
      <th>Student</th>
      <th>Grading preference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.course_taken %></td>
        <td><%= preference.description %></td>
        <td><%= preference.grade %></td>
        <td><%= preference.student_id %></td>
        <td><%= preference.grading_preference %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

